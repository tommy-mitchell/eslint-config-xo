{
	"name": "@tommy-mitchell/eslint-config-xo",
	"version": "1.0.0-0",
	"description": "Personal config for XO.",
	"keywords": [
		"nodejs",
		"config",
		"xo"
	],
	"repository": "tommy-mitchell/eslint-config-xo",
	"license": "MIT",
	"author": {
		"name": "Tommy Mitchell",
		"url": "https://tommymitchell.io"
	},
	"sideEffects": false,
	"type": "module",
	"files": [
		"src"
	],
	"exports": {
		"types": "./src/index.d.ts",
		"default": "./src/index.js"
	},
	"scripts": {
		"format": "dprint fmt && xo --fix",
		"lint": "xo",
		"test": "ava"
	},
	"dependencies": {
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-perfectionist": "^4.7.0",
		"eslint-plugin-react-refresh": "^0.4.18",
		"eslint-plugin-readable-tailwind": "beta",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-sort-react-dependency-arrays": "^1.0.0"
	},
	"devDependencies": {
		"@stylistic/eslint-plugin": "^3.0.1",
		"@tommy-mitchell/dprint-config": "^0.4.0",
		"ava": "^6.2.0",
		"dprint": "0.x",
		"eslint-plugin-react": "^7.37.4",
		"execa": "^9.5.2",
		"tempy": "^3.1.0",
		"xo": "npm:@spence-s/flat-xo@latest"
	},
	"peerDependencies": {
		"dprint": "0.x",
		"react": "19.x",
		"tailwindcss": "4.x",
		"xo": "0.x"
	},
	"peerDependenciesMeta": {
		"dprint": {
			"optional": true
		},
		"react": {
			"optional": true
		},
		"tailwindcss": {
			"optional": true
		}
	},
	"engines": {
		"node": "^18.20 || ^20.10 || >=21"
	},
	"ava": {
		"timeout": "30s"
	}
}
